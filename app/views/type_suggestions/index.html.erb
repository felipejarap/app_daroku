<p id="notice"><%= notice %></p>

<h1>Type Suggestions</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_suggestions.each do |type_suggestion| %>
      <tr>
        <td><%= type_suggestion.description %></td>
        <td><%= link_to 'Show', type_suggestion %></td>
        <td><%= link_to 'Edit', edit_type_suggestion_path(type_suggestion) %></td>
        <td><%= link_to 'Destroy', type_suggestion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

