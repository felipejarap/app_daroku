<br>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12 lead"><h1>User profile</h1><hr></div>
          </div>
          <div class="row">
      <div class="col-md-4 text-center">
                 <%= user_avatar %>
            </div>
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-12">
                  <h1 class="only-bottom-margin"> <%= @user.nickname %></h1>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <span class="text-muted">Rut:<%= @user.rut %><br>
                  <span class="text-muted">First name:<%= @user.fisrtname %><br>
                  <span class="text-muted">Last name:<%= @user.lastname %><br>
                  <span class="text-muted">Phone:<%= @user.phone %><br>
                  <span class="text-muted">Address:  <%= @user.address %><br>
                  <span class="text-muted">Municipality:  <%= @user.municipality %><br>
                  <span class="text-muted">City:  <%= @user.city %><br>
                </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
             <%= link_to 'Edit profile',  edit_user_path(@user)%> |
             <%= link_to 'Back', root_path %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


