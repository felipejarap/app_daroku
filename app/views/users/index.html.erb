          <p><%= product.description %><p>
          <p><%= product.price %><p>
          <p><%= product.stock %><p>
          <p><%= product.category.description %><p>
            <%= link_to "aÃ±adir al carito de compra",product_orders_path(product), class: 'btn btn-success', method: :post %>
        </div>
         </div>
       </div>
      <% end %>
      <div class="w-100" style="margin-top:20px"> </div>
    <% end %>
    </div>
  </div>
</div>
