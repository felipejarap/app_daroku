<table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>description</th>
        <th>stock</th>
        <th>price</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description%></td>
          <td><%= product.stock%></td>
          <td><%= product.price%></td>
        </tr>
      <% end %>
    </tbody>
  </table>